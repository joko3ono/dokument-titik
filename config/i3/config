# finds out, if available)
bar {
  font pango:Inconsolata for Powerline 9
  tray_output primary
  tray_padding 4 px
  colors {
    background #282A36
    statusline #F8F8F2
    separator  #44475A

    focused_workspace  #44475A #44475A #F8F8F2
    active_workspace   #282A36 #44475A #F8F8F2
    inactive_workspace #282A36 #282A36 #BFBFBF
    urgent_workspace   #FF5555 #FF5555 #F8F8F2
    binding_mode       #FF5555 #FF5555 #F8F8F2
  }
  position top
  height 25


  status_command i3status -c ~/.config/i3/i3status.conf
}

# Application
bindsym $mod+w	exec firefox
bindsym $mod+d	exec /usr/local/bin/st -e ranger
bindsym $mod+m	exec /usr/bin/spotify --no-zygote %u
bindsym $mod+u	exec /opt/Upwork/upwork %u
bindsym $mod+e	exec emacs

# start dmenu (a program launcher)
bindsym $mod+Mod1+d exec --no-startup-id rofi -show run
# bindsym $mod+d exec --no-startup-id dmenu_run
# bindsym $mod+d exec --no-startup-id rofi -show combi
bindsym $mod+space exec rofi -modi drun -show drun -display-drun "Apps : " -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar \
                -show-icons -icon-theme "Adwaita" -font "Noto Sans Regular 12"

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
# kill focused window
bindsym $mod+q kill


# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (e)xit, (s)uspend, (r)eboot, (Alt+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.local/bin/i3exit lock, mode "default"
    bindsym s exec --no-startup-id ~/.local/bin/i3exit suspend, mode "default"
    bindsym u exec --no-startup-id ~/.local/bin/i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id ~/.local/bin/i3exit lock, mode "default"
    bindsym r exec --no-startup-id ~/.local/bin/i3exit reboot, mode "default"
    bindsym Mod1+s exec --no-startup-id ~/.local/bin/i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

exec $HOME/.local/bin/remaps
exec dunst
exec $HOME/.local/bin/check_bright && $refresh_i3status
exec dropbox
exec nitrogen --restore &
exec picom --config $HOME/.config/picom/picom.conf &
exec_always --no-startup-id /usr/bin/light-locker
